//This script updates WorkTime records dynamically


jQuery.ajaxSetup({ 
	'beforeSend': function(xhr) {
					xhr.setRequestHeader("Accept", "text/javascript");
					xhr.setRequestHeader('X-CSRF-Token', $('meta[name="csrf-token"]').attr('content'));
					}
})


jQuery.fn.submitWithAjax = function() {
	this.submit(function() {
		//$.post(this.action, $(this).serialize(), null, "script");
		$.ajax({
				type: 'POST',
				beforeSend: function(xhr){
                xhr.setRequestHeader('X-CSRF-Token', $('meta[name="csrf-token"]').attr('content'))
            	},
				url: this.action,
				data: $(this).serialize(),
				success: null,
				dataType: "script"
		});
		return false;
	})

	return this;
};


function createAndStartNewWorkTime(e) {
	e.preventDefault();
	
	//update the start time
	$.getJSON("/work_times/get_current_datetime.json", function(data) {
		$('input#work_time_start_time').val(data);
	});
	
	$('a.start-time').hide();
	$('input.end-time').show();
}


function endWorkTime(e) {
	//e.preventDefault();
	
	//Doesn't happen in time... doing in controller instead
	//update the end time
	/*
	$.getJSON("/work_times/get_current_datetime.json", function(data) {
		$('input#work_time_end_time').val(data);
    });
	*/
	
	$('input.end-time').hide();
	$('a.start-time').show();
}


jQuery(function($) {
	$("#new_work_time").submitWithAjax();
		
	$('input.end-time').hide();
	
	$('a.start-time').live("click", createAndStartNewWorkTime);
	
	//Called in submit request
	$('input.end-time').live("click", endWorkTime);
});