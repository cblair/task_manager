<!DOCTYPE html>
<html>
<head>
  <title>TaskManager</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="page-header">
    <h1 class="brand">TaskManager</h1>
    <p></p>
  <div class="navbar">
    <div class="navbar-inner">
      <div class="container" style="width: auto;">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <div class="nav-collapse">
          <ul class="nav">
            <li><%= link_to "Home", root_path %></li>
            <li class="divider-vertical"></li>
            <li><%= link_to "Tasks", tasks_path %></li>
            <li class="divider-vertical"></li>
            <li><%= link_to "Categories", categories_path %></li>
            <li class="divider-vertical"></li>
            <li><%= link_to "Specifications", specifications_path %></li>
            <li class="divider-vertical"></li>
            <li><%= link_to "Requirements", requirements_path %></li>
            <li class="divider-vertical"></li>
            <li><%=
            		if user_signed_in?
	            		link_to "sign out", destroy_user_session_path,
	            				:method => :delete
	            	else
	            		notice = "Sign in to use TaskManager."
	            		link_to "sign in", new_user_session_path
	            	end
            	
            	%></li>
            <li class="divider-vertical"></li>
          </ul>
          <ul class="nav pull-right">
          </ul>
        </div><!-- /.nav-collapse -->
      </div>
    </div><!-- /navbar-inner -->
  </div><!-- /navbar -->
</div>

<div class="container well" style="background-color: #dfdfdf;">
    <% if notice || alert %>
        <%= javascript_include_tag "bootstrap-alert" %>
    <% end %>
    <% if notice %>
    <div id="notice" class="alert alert-info"">
        <a class="close" data-dismiss="alert" href="#">&times;</a>
        <%= notice %>
    </div>
    <% end %>
    <% if alert %>
    <div id="alert" class="alert">
        <a class="close" data-dismiss="alert" href="#">&times;</a>
        <%= alert %>
    </div>
    <% end %>

	<div class="well" style="background-color: #f5f5f5;">
	<% public_controllers = ["homes", "sessions", "registrations"] %>
	<% if user_signed_in? or public_controllers.include?(controller.controller_name) %>
		<%= yield %>
	<% else %>
		<%= link_to "Sign in", new_user_session_path %>
	<% end %>
	</div>
</div>

</body>
</html>
